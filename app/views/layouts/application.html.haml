!!! 5
%html
%head
	%title Tarif Budur
	= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
	= csrf_meta_tags

%body
	%nav.navbar.navbar-default
		.container
			.navbar-brand= link_to "Tarif Budur", root_path

			- if user_signed_in?
				%ul.nav.navbar-nav.navbar-right
					%li= link_to "Yeni Tarif", new_recipe_path
					%li= link_to "Çıkış Yap", destroy_user_session_path, method: :delete
			- else
				%ul.nav.navbar-nav.navbar-right
					%li= link_to "Kayıt Ol", new_user_registration_path
					%li= link_to "Giriş Yap", new_user_session_path



	.container
		- flash.each do |name, msg|
			= content_tag :div, msg, class: "alert"

		= yield